<!DOCTYPE html>
<html lang="en">

<%- include("./_head.ejs", { Canonical: "https://rafa-br34.dev/gallery" }) %>

<body>
	<%- include("./_navbar.ejs", { Page: "Gallery" }) -%>

	<div id="GalleryGrid" class="uk-light uk-background-secondary uk-grid-small uk-padding uk-child-width-1-2@s uk-child-width-1-3@m uk-child-width-1-4@l" uk-grid="masonry: pack" uk-height-viewport="expand: true"></div>

	<div id="Overlay" class="cs-gallery-overlay">
		<div class="uk-position-cover uk-flex uk-flex-center uk-flex-middle uk-padding">
			<div>
				<div class="uk-card uk-card-secondary uk-card-body uk-position-relative uk-border-rounded">
					<button class="uk-modal-close-default" type="button" aria-label="Close" id="OverlayClose" uk-close></button>

					<div class="uk-grid-small" uk-grid>
						<div class="uk-width-expand@s uk-position-relative">
							<div id="OverlaySpinner" class="uk-position-center">
								<div uk-spinner="ratio: 2"></div>
							</div>
							<img id="OverlayImage" class="uk-width-1-1 cs-gallery-overlay-image" loading="lazy" alt="">
						</div>
						<div class="uk-width-auto@s">
							<h3 id="OverlayTitle" class="uk-margin-xsmall"></h3>
							<ul class="uk-list uk-margin-remove" id="OverlayDetails"></ul>
							
							<h4 class="uk-margin-xsmall">Artist socials</h4>
							<div class="uk-margin-remove" id="OverlaySocials"></div>
							
							<h4 class="uk-margin-xsmall">Image mirrors</h4>
							<div class="uk-margin-remove" style="white-space: nowrap; overflow: hidden; text-overflow: ellipsis;" id="OverlayMirrors"></div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>

	<div id="GalleryMask" class="uk-position-fixed uk-position-cover uk-flex uk-flex-center uk-flex-middle cs-gallery-mask">
		<div uk-spinner="ratio: 2"></div>
	</div>

	<%- include("./_footer.ejs") %>
</body>
</html>